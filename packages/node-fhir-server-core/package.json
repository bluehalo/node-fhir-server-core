{
  "name": "@xcaliber-health/node-fhir-server-core",
  "version": "2.2.8",
  "description": "Node FHIR Rest API Server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xcaliber-health/node-fhir-server-core",
    "directory": "packages/node-fhir-server-core"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "dist/index",
  "scripts": {
    "build": "babel src -d dist --copy-files",
    "build:watch": "babel src -w -d dist --copy-files",
    "changelog": "conventional-changelog -p angular -s -i CHANGELOG.md",
    "lint": "eslint \"src/**/*.js\"",
    "nodemon": "cross-env NODE_ENV=development node scripts/nodemon.js",
    "prepublish": "yarn build",
    "snyk": "snyk",
    "snyk-protect": "snyk protect",
    "start": "node scripts/runner.js",
    "test": "cross-env NODE_ENV=test jest src"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/server/resources/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "verbose": true
  },
  "dependencies": {
    "@xcaliber-health/fhir-response-util": "^1.2.4",
    "@asymmetrik/sof-scope-checker": "^1.0.7",
    "@hapi/bourne": "^2.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "express": "^4.17.1",
    "glob": "^7.2.0",
    "helmet": "^4.6.0",
    "http": "^0.0.1-security",
    "http-proxy": "^1.18.1",
    "https": "^1.0.0",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.1.0",
    "jwk-to-pem": "^2.0.5",
    "method-override": "^3.0.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "mongodb": "^4.1.3",
    "passport": "^0.5.0",
    "passport-http-bearer": "^1.0.1",
    "sanitize-html": "^2.5.2",
    "serve-favicon": "^2.5.0",
    "snyk": "1.1044.0",
    "superagent": "^6.1.0",
    "url": "^0.11.0",
    "validator": "^13.6.0",
    "winston": "^3.3.3",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "conventional-changelog-cli": "^2.1.1",
    "jest": "^27.3.1",
    "nock": "^13.1.4",
    "nodemon": "^2.0.14",
    "supertest": "^6.1.6"
  },
  "engines": {
    "node": "^8.10.0 || ^10.13.0 || >=11.10.1"
  },
  "snyk": true,
  "gitHead": "717c4ad053a5034563d778318b9ccb673d025930"
}