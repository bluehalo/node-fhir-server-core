    "express": "^4.19.2",
    "glob": "^11.0.0",
    "helmet": "^7.1.0",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.6",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "mongodb": "^6.8.0",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "sanitize-html": "^2.13.0",
    "serve-favicon": "^2.5.0",
    "superagent": "^10.1.0",
    "validator": "^13.12.0",
    "winston": "^3.14.2",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "conventional-changelog-cli": "^5.0.0",
    "jest": "^29.7.0",
